<h1>Lista de productos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"> Nombre</th>
      <th scope="col"> Descripcion</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagenes</th>
      <th scope="col">Codigo</th>
      <th scope="col">Stock</th>
      <th scope="col">Categoria</th>
      <th scope="col">Id</th>
    
    </tr>
  </thead>

    {{#each productos}}

     <tbody>
      <tr>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>{{price}}</td>
      <td>{{thumbnail}} </td>
      <td>{{code}} </td>
      <td>{{stock}} </td>
      <td>{{category}} </td>
      <th scope="row">{{id}} </th>
      </tr>
  
  {{/each}}
 
 </tbody>
</table>


